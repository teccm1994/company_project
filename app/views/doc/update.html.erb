<div style="margin:100px auto;width:40%;border:#e8e8e8 2px solid">
  <label style="font-size:16px;margin-left:49px;margin-top:10px">更新文档</label>
  <form action="/doc/update2" method="post">
    <div class="form-group" style="margin:0 auto;width:80%">
      <label for="forusername">文档名称:</label>
      <input type="text" name="title" value ="<%=@doc.title%>" class="form-control" id="forusername" placeholder="文档名称">
    </div>

  	<div class="form-group" style="margin:0 auto;width:80%">
      <label for="forusername">文档内容:</label>
      <input type="text" name="content" value ="<%=@doc.content%>" class="form-control" id="forusername" placeholder="文档内容">
    </div>

    <input type="hidden" name="id" value = "<%=@doc.id%>"/>
    <input type = "hidden" name = "com_id" value = "<%=@doc.com_id%>"/>
    <button style="margin-left:49px;width:100px;margin-top:15px;margin-bottom:10px" type="submit" class="btn btn-default">提交</button>
  </form>
</div>